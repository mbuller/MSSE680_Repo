@model DAL.CreditCard

@{
    ViewBag.Title = "Edit Credit Card";
}

<h2>Edit Credit Card</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CreditCard</legend>

        @Html.HiddenFor(model => model.CreditCardId)
        @Html.HiddenFor(model => model.CreditCardUser_PersonId)
        @Html.HiddenFor(model => model.Account_AccountId)
        @Html.HiddenFor(model => model.CardType)
        @Html.HiddenFor(model => model.CardType)
        @Html.HiddenFor(model => model.CreditCardNumber)
        @Html.HiddenFor(model => model.Balance)

        <div class="editor-label">
            @Html.LabelFor(model => model.CreditCardNumber)
        </div>
        <div class="editor-field">
             @Html.DisplayFor(model => model.CreditCardNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Balance)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.Balance)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CardType)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.CardType)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Limit)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Limit)
            @Html.ValidationMessageFor(model => model.Limit)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ExpirationMonth)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ExpirationMonth)
            @Html.ValidationMessageFor(model => model.ExpirationMonth)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ExpirationYear)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ExpirationYear)
            @Html.ValidationMessageFor(model => model.ExpirationYear)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
